<head>
  <meta charset="UTF-8" />
  <title>Font Runner</title>
  <style>
    /* === FONTS (your five) === */
    @font-face {
      font-family: "FontA";
      src: url("https://www.onlinewebfonts.com/download/95213692329fefad58c3a5771dd6ddba") format("woff2");
      font-display: swap;
    }
    @font-face {
      font-family: "FontB";
      src: url("https://www.onlinewebfonts.com/download/06b3f3db113bae4db8c28dedfd667818") format("woff2");
      font-display: swap;
    }
    @font-face {
      font-family: "FontC";
      src: url("https://www.onlinewebfonts.com/download/ffc278d3825e583bc658db3933a55996") format("woff2");
      font-display: swap;
    }
    @font-face {
      font-family: "FontD";
      src: url("https://www.onlinewebfonts.com/download/1e2cc42843a21d9abda89d0344a009a1") format("woff2");
      font-display: swap;
    }
    @font-face {
      font-family: "FontE";
      src: url("https://www.onlinewebfonts.com/download/97533d70e8f4d99828e92be5f1660c53") format("woff2");
      font-display: swap;
    }

    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      background: radial-gradient(circle at top, #1f2937, #020617);
      color: #e5e7eb;
      font-family: "FontA", system-ui, sans-serif;
    }

    .game-wrapper {
      position: relative;
      width: 420px;
      height: 620px;
      background: #020617;
      border-radius: 18px;
      overflow: hidden;
      box-shadow: 0 24px 50px rgba(0, 0, 0, 0.7);
      border: 1px solid rgba(148, 163, 184, 0.4);
    }

    .hud {
      position: absolute;
      top: 10px;
      left: 10px;
      right: 10px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      z-index: 10;
      pointer-events: none;
    }

    .logo {
      font-family: "FontB", system-ui, sans-serif;
      text-transform: uppercase;
      letter-spacing: 0.12em;
      font-size: 12px;
      color: #a5b4fc;
    }

    .score-box {
      font-family: "FontC", system-ui, sans-serif;
      font-size: 13px;
      background: rgba(15, 23, 42, 0.9);
      padding: 4px 10px;
      border-radius: 999px;
      border: 1px solid rgba(148, 163, 184, 0.6);
    }

    .score-box span {
      font-family: "FontE", system-ui, monospace;
      color: #facc15;
      font-size: 14px;
    }

    canvas {
      display: block;
      width: 100%;
      height: 100%;
      background: radial-gradient(circle at top, #111827, #020617);
    }

    .overlay {
      position: absolute;
      inset: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      background: radial-gradient(circle at center, rgba(15, 23, 42, 0.9), rgba(15, 23, 42, 0.98));
      color: #e5e7eb;
      text-align: center;
      padding: 24px;
      z-index: 20;
    }

    .overlay h1 {
      margin: 0 0 8px;
      font-family: "FontB", system-ui, sans-serif;
      letter-spacing: 0.16em;
      text-transform: uppercase;
      font-size: 18px;
    }

    .overlay p {
      margin: 4px 0;
      font-family: "FontD", system-ui, sans-serif;
      font-size: 13px;
      color: #9ca3af;
    }

    .overlay kbd {
      display: inline-block;
      padding: 2px 6px;
      border-radius: 4px;
      border: 1px solid #6b7280;
      background: #020617;
      font-size: 11px;
      font-family: "FontE", system-ui, monospace;
      margin: 0 2px;
      color: #e5e7eb;
    }

    .overlay button {
      margin-top: 16px;
      padding: 8px 18px;
      border-radius: 999px;
      border: none;
      cursor: pointer;
      background: linear-gradient(135deg, #22c55e, #16a34a);
      color: #022c22;
      font-weight: 600;
      font-family: "FontB", system-ui, sans-serif;
      letter-spacing: 0.08em;
      text-transform: uppercase;
      font-size: 11px;
      box-shadow: 0 14px 30px rgba(22, 163, 74, 0.5);
      transition: transform 0.1s ease, box-shadow 0.1s ease, filter 0.1s ease;
    }

    .overlay button:hover {
      transform: translateY(-1px);
      box-shadow: 0 18px 36px rgba(22, 163, 74, 0.6);
      filter: brightness(1.05);
    }

    .overlay button:active {
      transform: translateY(1px);
      box-shadow: 0 8px 18px rgba(22, 163, 74, 0.5);
      filter: brightness(0.95);
    }

    .theme-select {
      position: absolute;
      bottom: 10px;
      left: 50%;
      transform: translateX(-50%);
      z-index: 15;
      padding: 6px 10px;
      border-radius: 999px;
      border: 1px solid #4b5563;
      background: rgba(15, 23, 42, 0.95);
      color: #e5e7eb;
      font-family: "FontC", system-ui, sans-serif;
      font-size: 11px;
    }
