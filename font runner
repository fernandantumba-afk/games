<body>
  <div class="game-wrapper">
    <div class="hud">
      <div class="logo">Font Runner</div>
      <div class="score-box">Score: <span id="score">0</span></div>
    </div>

    <select id="themeSelect" class="theme-select">
      <option value="A">Theme A (FontA)</option>
      <option value="B">Theme B (FontB)</option>
      <option value="C">Theme C (FontC)</option>
      <option value="D">Theme D (FontD)</option>
      <option value="E">Theme E (FontE)</option>
    </select>

    <canvas id="game" width="420" height="620"></canvas>

    <div class="overlay" id="overlay">
      <h1>Font Runner</h1>
      <p>Dodge the glowing blocks and climb the score.</p>
      <p>
        Move with <kbd>←</kbd><kbd>→</kbd> or <kbd>A</kbd><kbd>D</kbd><br />
        Press <kbd>Space</kbd> to start / restart
      </p>
      <button id="startBtn">Start game</button>
    </div>
  </div>

  <script>
    const canvas = document.getElementById("game");
    const ctx = canvas.getContext("2d");
    const scoreEl = document.getElementById("score");
    const overlay = document.getElementById("overlay");
    const startBtn = document.getElementById("startBtn");
    const themeSelect = document.getElementById("themeSelect");

    const W = canvas.width;
    const H = canvas.height;

    const player = {
      x: W / 2,
      y: H - 80,
      w: 40,
      h: 16,
      speed: 5,
      vx: 0,
    };

    let obstacles = [];
    let lastSpawn = 0;
    let spawnInterval = 900;
    let running = false;
    let lastTime = 0;
    let score = 0;
    let gameOver = false;

    function resetGame() {
      player.x = W / 2;
      player.vx = 0;
      obstacles = [];
      lastSpawn = 0;
      spawnInterval = 900;
      score = 0;
      scoreEl.textContent = "0";
      gameOver = false;
    }

    function spawnObstacle() {
      const width = 40 + Math.random() * 80;
      const x = Math.random() * (W - width);
      const speed = 2 + Math.random() * 2.5;
      const hue = 160 + Math.random() * 160;
      obstacles.push({
        x,
        y: -30,
        w: width,
        h: 14,
        vy: speed,
        hue,
      });
    }

    function update(dt) {
      if (!running) return;

      // Player movement
      player.x += player.vx;
      if (player.x < 20) player.x = 20;
      if (player.x > W - 20) player.x = W - 20;

      // Obstacles
      lastSpawn += dt;
      if (lastSpawn > spawnInterval) {
        lastSpawn = 0;
        spawnObstacle();
        if (spawnInterval > 450) spawnInterval -= 10;
      }

      obstacles.forEach(o => {
        o.y += o.vy;
      });

      obstacles = obstacles.filter(o => o.y < H + 40);

      // Collision
      for (const o of obstacles) {
        if (
          player.x - player.w / 2 < o.x + o.w &&
          player.x + player.w / 2 > o.x &&
          player.y - player.h / 2 < o.y + o.h &&
          player.y + player.h / 2 > o.y
        ) {
          running = false;
          gameOver = true;
          overlay.style.display = "flex";
          overlay.querySelector("p").innerHTML =
            "You scored <strong>" +
            score +
            "</strong> points.<br>Press Space or click to try again.";
          return;
        }
      }

      // Score
      score += dt * 0.01;
      scoreEl.textContent = Math.floor(score);
    }

    function drawBackground() {
      const gradient = ctx.createRadialGradient(
        W / 2,
        0,
        40,
        W / 2,
        H,
        H
      );
      gradient.addColorStop(0, "#111827");
      gradient.addColorStop(1, "#020617");
      ctx.fillStyle = gradient;
      ctx.fillRect(0, 0, W, H);

      ctx.strokeStyle = "rgba(55,65,81,0.4)";
      ctx.lineWidth = 1;
      for (let x = 40; x < W; x += 40) {
        ctx.beginPath();
        ctx.moveTo(x, 0);
        ctx.lineTo(x, H);
        ctx.stroke();
      }
      for (let y = 40; y < H; y += 40) {
        ctx.beginPath();
        ctx.moveTo(0, y);
        ctx.lineTo(W, y);
        ctx.stroke();
      }
    }

    function drawPlayer() {
      ctx.save();
      ctx.translate(player.x, player.y);
      ctx.fillStyle = "#22c55e";
      ctx.shadowColor = "rgba(34,197,94,0.7)";
      ctx.shadowBlur = 18;
      ctx.beginPath();
      ctx.roundRect(-player.w / 2, -player.h / 2, player.w, player.h, 6);
      ctx.fill();
      ctx.restore();
    }

    function drawObstacles() {
      obstacles.forEach(o => {
        ctx.save();
        ctx.translate(o.x, o.y);
        const grad = ctx.createLinearGradient(0, 0, o.w, o.h);
        grad.addColorStop(0, `hsla(${o.hue}, 90%, 60%, 0.9)`);
        grad.addColorStop(1, `hsla(${o.hue + 40}, 90%, 50%, 0.9)`);
        ctx.fillStyle = grad;
        ctx.shadowColor = `hsla(${o.hue}, 90%, 60%, 0.7)`;
        ctx.shadowBlur = 16;
        ctx.beginPath();
        ctx.roundRect(0, 0, o.w, o.h, 6);
        ctx.fill();
        ctx.restore();
      });
    }

    function loop(timestamp) {
      if (!lastTime) lastTime = timestamp;
      const dt = timestamp - lastTime;
      lastTime = timestamp;

      update(dt);

      ctx.clearRect(0, 0, W, H);
      drawBackground();
      drawObstacles();
      drawPlayer();

      requestAnimationFrame(loop);
    }

    // Input
    const keys = {};
    document.addEventListener("keydown", e => {
      keys[e.code] = true;

      if (e.code === "ArrowLeft" || e.code === "KeyA") {
        player.vx = -player.speed;
      }
      if (e.code === "ArrowRight" || e.code === "KeyD") {
        player.vx = player.speed;
      }

      if (e.code === "Space") {
        if (!running) {
          overlay.style.display = "none";
          resetGame();
          running = true;
        }
      }
    });

    document.addEventListener("keyup", e => {
      keys[e.code] = false;
      if (
        (!keys["ArrowLeft"] && !keys["KeyA"]) &&
        (!keys["ArrowRight"] && !keys["KeyD"])
      ) {
        player.vx = 0;
      }
    });

    startBtn.addEventListener("click", () => {
      overlay.style.display = "none";
      resetGame();
      running = true;
    });

    themeSelect.addEventListener("change", () => {
      const theme = themeSelect.value;
      let font;
      switch (theme) {
        case "A":
          font = "FontA";
          break;
        case "B":
          font = "FontB";
          break;
        case "C":
          font = "FontC";
          break;
        case "D":
          font = "FontD";
          break;
        case "E":
          font = "FontE";
          break;
      }
      document.body.style.fontFamily = `"${font}", system-ui, sans-serif`;
    });

    // Start render loop
    requestAnimationFrame(loop);
  </script>
</body>
</html>
