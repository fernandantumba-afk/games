<body>

    <div class="title">TETRIS</div>

    <div id="game-container">
        <canvas id="tetris" width="240" height="400"></canvas>
        <div class="side-panel">
            <div class="label">SCORE</div>
            <div id="score" class="value">0</div>
            
            <div class="label">LINES</div>
            <div id="lines" class="value">0</div>

            <div class="controls">
                ARROWS: Move<br>UP: Rotate<br>DOWN: Drop
            </div>
        </div>
    </div>

<script>
const canvas = document.getElementById('tetris');
const context = canvas.getContext('2d');
context.scale(20, 20);

// Piece Definitions & Logic (JavaScript logic remains the same)
function createPiece(type) {
    if (type === 'I') return [
        [0, 1, 0, 0],
        [0, 1, 0, 0],
        [0, 1, 0, 0],
        [0, 1, 0, 0],
    ];
    if (type === 'L') return [
        [0, 2, 0],
        [0, 2, 0],
        [0, 2, 2],
    ];
    if (type === 'J') return [
        [0, 3, 0],
        [0, 3, 0],
        [3, 3, 0],
    ];
    if (type === 'O') return [
        [4, 4],
        [4, 4],
    ];
    if (type === 'Z') return [
        [5, 5, 0],
        [0, 5, 5],
        [0, 0, 0],
    ];
    if (type === 'S') return [
        [0, 6, 6],
        [6, 6, 0],
        [0, 0, 0],
    ];
    if (type === 'T') return [
        [0, 7, 0],
        [7, 7, 7],
        [0, 0, 0],
    ];
}

const colors = [null, '#FF0D72', '#0DC2FF', '#0DFF72', '#F538FF', '#FF8E0D', '#FFE138', '#3877FF'];

function draw() {
    context.fillStyle = '#000';
    context.fillRect(0, 0, canvas.width, canvas.height);
    drawMatrix(arena, {x: 0, y: 0});
    drawMatrix(player.matrix, player.pos);
}

function drawMatrix(matrix, offset) {
    matrix.forEach((row, y) => {
        row.forEach((value, x) => {
            if (value !== 0) {
                context.fillStyle = colors[value];
                context.fillRect(x + offset.x, y + offset.y, 1, 1);
            }
        });
    });
}

function merge(arena, player) {
    player.matrix.forEach((row, y) => {
        row.forEach((value, x) => {
            if (value !== 0) arena[y + player.pos.y][x + player.pos.x] = value;
        });
    });
}

function rotate(matrix, dir) {
    for (let y = 0; y < matrix.length; ++y) {
        for (let x = 0; x < y; ++x) {
            [matrix[x][y], matrix[y][x]] = [matrix[y][x], matrix[x][y]];
        }
    }
    if (dir > 0) matrix.forEach(row => row.reverse());
    else matrix.reverse();
}

function collide(arena, player) {
    const [m, o] = [player.matrix, player.pos];
    for (let y = 0; y < m.length; ++y) {
        for (let x = 0; x < m[y].length; ++x) {
            if (m[y][x] !== 0 && (arena[y + o.y] && arena[y + o.y][x + o.x]) !== 0) return true;
        }
    }
    return false;
}

function arenaSweep() {
    let linesCleared = 0;
    outer: for (let y = arena.length - 1; y > 0; --y) {
        for (let x = 0; x < arena[y].length; ++x) {
            if (arena[y][x] === 0) continue outer;
        }
        const row = arena.splice(y, 1)[0].fill(0);
        arena.unshift(row);
        linesCleared++;
        y++; // Check the new row that fell down
    }
    if (linesCleared > 0) {
        // Simple scoring system: more points for clearing multiple lines at once
        player.score += (linesCleared === 4 ? 800 : linesCleared * 100); 
        player.lines += linesCleared;
    }
    document.getElementById('score').innerText = player.score;
    document.getElementById('lines').innerText = player.lines;
}

// Game State
const arena = Array.from({length: 20}, () => new Array(12).fill(0));
const player = { pos: {x: 0, y: 0}, matrix: null, score: 0, lines: 0 };

function playerReset() {
    const pieces = 'ILJOTSZ';
    player.matrix = createPiece(pieces[pieces.length * Math.random() | 0]);
    player.pos.y = 0;
    player.pos.x = (arena[0].length / 2 | 0) - (player.matrix[0].length / 2 | 0);

    // Game Over condition
    if (collide(arena, player)) { 
        arena.forEach(row => row.fill(0)); 
        player.score = 0; 
        player.lines = 0;
        alert("GAME OVER! Your Score: " + player.score); 
    }
}

function playerDrop() {
    player.pos.y++;
    if (collide(arena, player)) {
        player.pos.y--;
        merge(arena, player);
        playerReset();
        arenaSweep();
    }
    dropCounter = 0;
}

let dropCounter = 0;
let dropInterval = 1000;
let lastTime = 0;
function update(time = 0) {
    const deltaTime = time - lastTime;
    lastTime = time;
    dropCounter += deltaTime;
    if (dropCounter > dropInterval) playerDrop();
    draw();
    requestAnimationFrame(update);
}

document.addEventListener('keydown', event => {
    if (event.keyCode === 37) { player.pos.x--; if(collide(arena, player)) player.pos.x++; } // Left
    else if (event.keyCode === 39) { player.pos.x++; if(collide(arena, player)) player.pos.x--; } // Right
    else if (event.keyCode === 40) { playerDrop(); } // Down (soft drop)
    else if (event.keyCode === 38) { rotate(player.matrix, 1); if(collide(arena, player)) rotate(player.matrix, -1); } // Up (rotate)
});

playerReset();
update();
</script>
</body>
</html>
